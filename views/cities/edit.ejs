<% include ../partials/header %>


    <div class="row">
         <h1 style="text-align: center;">Edit <%= city.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action= "/cities/<%= city._id %>/?_method=PUT" method= "POST">
               <div class="form-group">
                  <input class="form-control" type = "text" name = "city[name]" value = "<%= city.name %>" > 
               </div>
                  <div class="form-group">
                  <input class="form-control" type = "number" name = "city[price]" value = "<%= city.price  %>" min="0.00" step="0.01" > 
               </div>
               <div class="form-group">
                   <input class="form-control" type = "text" name = "city[image]" value = "<%= city.image %>" >
               </div>
               <div class="form-group">
                   <input class="form-control" type = "text" name = "city[description]" value = "<%= city.description %>" >
               </div>
               <div class="form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
               </div>

            </form>
             <a href="/cities">Go to the destinations page</a>
        </div>
       
    </div>
 
<% include ../partials/footer %>