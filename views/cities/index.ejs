<% include ../partials/header %>




    <header class = "jumbotron">
        <div class= "container">
            <h1>Welcome to RFTravel!</h1>
            <p>How is it really like there?</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/cities/new">Add new destination!</a>
            </p>
        </div>
    </header>
  
    
    <div class= "row text-center" style= "display:flex; flex-wrap:wrap;">
           <% cities.forEach(function(cities){ %>
            <div class= "col-md-3 col-sm-6">
                <div class= "thumbnail">
                    <img src="<%= cities.image %>">
                    <div class= "caption">
                         <h4> <%= cities.name %> </h4>
                    </div>
                    <p>
                        <a href="/cities/<%= cities._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
               
                
            </div>
             <% }); %>
    </div>


<% include ../partials/footer %>